<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MyRecipeMapper">
	<resultMap type="MyRecipe" id="MyRecipeResultMap">
		<result property="memberEmail" 	column="MEMBER_EMAIL"/>
		<result property="recipeNo" 	column="RECIPE_NO"/>
		<result property="myRecipeNo" 	column="MYRECIPE_NO"/>
	</resultMap>
	
	<delete id="removeMyRecipe" parameterType="MyRecipe">
		DELETE FROM MYRECIPE_TBL WHERE RECIPE_NO = #{recipeNo}
	</delete>
	
	<insert id="insertMyRecipe" parameterType="MyRecipe">
		INSERT INTO MYRECIPE_TBL VALUES(SEQ_MYRECIPE_NO.NEXTVAL, #{memberEmail}, #{recipeNo})
	</insert>
	
	<select id="selectAllByValue" resultMap="MyRecipeResultMap">
		SELECT * FROM MYRECIPE WHERE MEMBER_EMAIL = #{memberEmail}
	</select>
	
	<select id="selectTotalCount" parameterType="String">
		SELECT COUNT(*) FROM MYRECIPE WHERE MEMBER_EMAIL = #{memberEmail}
	</select>

</mapper>